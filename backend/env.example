# Application
APP_NAME=CoreS3 Management System
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Security - MUST CHANGE IN PRODUCTION
SECRET_KEY=your-secret-key-min-32-chars-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your-db-password
DB_NAME=cores3_management

# MQTT Broker
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_USE_TLS=False

# Backend Server (장비가 접근할 수 있는 백엔드 주소)
# ESP32 장비가 오디오 파일을 다운로드할 수 있도록 실제 IP 주소 설정 필요
# 예: "192.168.1.100" 또는 "10.10.11.1" (장비와 같은 네트워크)
BACKEND_HOST=localhost
BACKEND_PORT=8000

# ASR Server (RK3588 Audio Recognition)
# ASR 서버가 완료된 음성인식 결과를 전송할 백엔드 URL
BACKEND_URL=http://localhost:8000
# ASR 서버 주소 (ESP32가 음성을 전송할 서버)
ASR_SERVER_HOST=localhost
ASR_SERVER_PORT=8001

# File Upload
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_AUDIO_EXTENSIONS=mp3,wav,ogg
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,gif

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
